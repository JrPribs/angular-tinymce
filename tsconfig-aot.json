{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "dom", "es6" ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": ".tmp",
    "skipMetadataEmit": false
  }
}
